<div itemscope
	 itemtype="http://www.w3.org/ns/activitystreams#Create">
  <span itemprop="actor" itemscope
		itemtype="http://www.w3.org/ns/activitystreams#Person">
    <span itemprop="displayName"><%= link_to activity.user.username, activity.user %></span>
  </span>
  created/<%= activity.verb %>
  <span itemprop="object" itemscope
		itemtype="http://www.w3.org/ns/activitystreams#Note">
    a message with content
    "<span itemprop="content"><%= link_to activity.subject.body, activity.subject %></span>"
  </span>
  at <%= activity.created_at %>.
</div>