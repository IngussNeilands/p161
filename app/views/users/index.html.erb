<p id="notice"><%= notice %></p>

<h1>Registered Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Follow?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
		<td><%= user.email %></td>
        <td><%= follow_or_unfollow_user(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
